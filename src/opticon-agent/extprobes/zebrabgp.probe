#!/bin/bash
echo '"bgp":['
opticon-helper vtysh -c 'show ip bgp summary' | \
          grep --after-context=999 ^Neighbor | \
          grep '^[0-9]' | while read n ps as mr ms tv iq oq ud pr; do
cat << _EOF_
  {
    peer: "$n"
    sent: $ps
    recv: $pr
    up: "$ud"
    as: $as
  }
_EOF_
done
echo "]"
